        <entity-one entity-name="AccountTransaction" value-field="lookedUpValue"/>
        <set-nonpk-fields value-field="lookedUpValue" map="parameters"/>
        <set field="newEntity.updatedBy" from-field="userLogin.userLoginId"/>
