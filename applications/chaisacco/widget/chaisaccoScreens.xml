    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="chaisaccoCommonDecorator" location="${parameters.mainDecoratorLocation}">
