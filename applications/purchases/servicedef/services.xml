<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Purchases Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service
        name="createPurchaseQuote"
        default-entity-name="PrchseQteHdr"
        engine="simple"
        invoke="createPurchaseQuote"
        auth="true"
        location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml">
        <description>Create a Quote</description>
        <auto-attributes include="pk" mode="OUT" optional="false" />
        <auto-attributes include="nonpk" mode="IN" optional="true" />
    </service>

    <service
        name="updatePurchaseQuote" default-entity-name="PrchseQteHdr" engine="simple"
        location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml"
        invoke="updatePurchaseQuote" auth="true">
        <description>Update a Quote</description>
        <auto-attributes include="pk" mode="IN" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false" />
        <override name="confirmDate" optional="true"/>
    </service>

    <service name="createPurchaseQuoteItem" engine="simple"
        default-entity-name="QuoteLines"
        location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml"
        invoke="createPurchaseQuoteItem">
        <description>Create a new Quote Item Record</description>
        <auto-attributes mode="IN" include="pk" optional="false"/>
        <auto-attributes mode="IN" include="nonpk" optional="true"/>
        <override name="quoteItemSeqId" mode="INOUT" optional="true"/><!-- will optionally be assigned by the system -->
        <override name="description" allow-html="any"/>
    </service>


    <!--
        Purchase Orders Services
    -->
    <service name="createPurchaseOrder" engine="simple" default-entity-name="PurchaseOrderHeader"
             location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml"
             invoke="createPurchaseOrder" auth="true">
        <description>Create Purchase Order</description>
        <auto-attributes mode="IN" include="pk" optional="true"/>
        <auto-attributes mode="IN" include="nonpk" optional="true"/>
    </service>

    <service name="updatePurchaseOrder" engine="simple" default-entity-name="PurchaseOrderHeader"
             location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml"
             invoke="updatePurchaseOrder" auth="true">
        <description>Update PurchaseOrderHeader</description>
        <auto-attributes mode="IN" include="pk" optional="false"/>
        <auto-attributes mode="IN" include="nonpk" optional="true"/>
    </service>

    <service name="deletePurchaseOrder" engine="simple" default-entity-name="PurchaseOrderHeader"
             location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml" i
             nvoke="deletePurchaseOrder" auth="true">
        <description>Delete PurchaseOrderHeader</description>
        <auto-attributes mode="IN" include="pk" optional="false"/>
    </service>


</services>
