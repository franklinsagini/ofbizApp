<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
    <description>Purchases Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service
        name="createFileStatus" engine="simple"
        default-entity-name="RegistryFileStatus"
        location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml" invoke="createFileStatus" auth="true">
        <description>Create Skill for a Party</description>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
        <auto-attributes include="pk" mode="OUT" optional="true"/>
    </service>

    <service name="updateFileStatus" engine="simple" default-entity-name="RegistryFileStatus"
             location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml" invoke="updateFileStatus" auth="true">
        <description>Update a PartySkill</description>
        <auto-attributes mode="IN" include="pk" optional="false"/>
        <auto-attributes mode="IN" include="nonpk" optional="true"/>
    </service>

    <service
        name="createRegistryFile" engine="simple"
        default-entity-name="RegistryFileStatus"
        location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml" invoke="createRegistryFile" auth="true">
        <description>Create Skill for a Party</description>
        <auto-attributes include="nonpk" mode="IN" optional="true"/>
        <auto-attributes include="pk" mode="OUT" optional="true"/>
    </service>

    <service name="updateRegistryFile" engine="simple" default-entity-name="RegistryFileStatus"
             location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml" invoke="updateRegistryFile" auth="true">
        <description>Update a PartySkill</description>
        <auto-attributes mode="IN" include="pk" optional="false"/>
        <auto-attributes mode="IN" include="nonpk" optional="true"/>
    </service>

    <service name="createPurchaseQuote" engine="simple" default-entity-name="PurchaseQuote"
        location="component://purchases/script/org/ofbiz/purchases/PurchasesServices.xml" invoke="createPurchaseQuote">
        <description>Create Invoice Record</description>
        <auto-attributes mode="INOUT" include="pk" optional="true"/>
        <auto-attributes mode="IN" include="nonpk" optional="true"/>
    </service>

</services>
