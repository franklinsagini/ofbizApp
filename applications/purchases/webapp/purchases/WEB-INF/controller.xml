    <!-- Request Mappings -->
    <request-map uri="main">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="main"/>
    </request-map>
    <request-map uri="findQuotes">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="findQuotes"/>
    </request-map>
    <request-map uri="editPurchaseQuote">
        <security https="true" auth="true" />
        <response name="success" type="view" value="editPurchaseQuote" />
    </request-map>
    <request-map uri="createPurchaseQuote">
        <security https="true" auth="true" />
        <event type="service" invoke="createPurchaseQuote" />
        <response name="success" type="view" value="editPurchaseQuote" />
        <response name="error" type="view" value="editPurchaseQuote" />
    </request-map>
    <request-map uri="updatePurchaseQuote">
        <security https="true" auth="true" />
        <event type="service" invoke="updatePurchaseQuote" />
        <response name="success" type="view" value="editPurchaseQuote" />
        <response name="error" type="view" value="editPurchaseQuote" />
    </request-map>
    <request-map uri="findPurchaseQuote">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="findQuotes"/>
    </request-map>
    <request-map uri="FindPurchaseOrders">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="findPurchaseOrders"/>
    </request-map>
    <request-map uri="findShipments">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="findShipments"/>
    </request-map>
    <request-map uri="findReturns">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="findReturns"/>
    </request-map>
    <request-map uri="reports">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="reports"/>
    </request-map>

    <!-- New Quotes -->

    <request-map uri="EditPurchaseQuote">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="EditPurchaseQuote"/>
    </request-map>

    <request-map uri="createPurchaseQuote">
        <security https="true" auth="true"/>
        <event type="service" invoke="createPurchaseQuote"/>
        <response name="success" type="view" value="EditPurchaseQuote"/>
        <response name="error" type="view" value="EditPurchaseQuote"/>
    </request-map>
    <request-map uri="updatePurchaseQuote">
        <security https="true" auth="true"/>
        <event type="service" path="" invoke="updatePurchaseQuote"/>
        <response name="success" type="view" value="EditPurchaseQuote"/>
        <response name="error" type="view" value="EditPurchaseQuote"/>
    </request-map>
      <request-map uri="LookupPartyName">
        <security auth="true" https="true"/>
        <response name="success" type="view" value="LookupPartyName"/>
    </request-map>


    <!-- PURCHASE ORDERS -->
    <request-map uri="EditPurchaseOrders">
        <security auth="true" https="true" />
        <response name="success" type="view" value="EditPurchaseOrders" />
    </request-map>

    <request-map uri="updatePurchaseOrder">
        <security https="true" auth="true" />
        <event type="service" invoke="updatePurchaseOrder" />
        <response name="success" type="request-redirect" value="EditPurchaseOrders">
            <redirect-parameter name="purchaseOrderId" />
        </response>
        <response name="error" type="view" value="EditPurchaseOrders" />
    </request-map>

