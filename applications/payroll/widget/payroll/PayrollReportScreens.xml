    <screen name="PayslipGenerator">
    <section>
            <actions>
                <set field="titleProperty" value="Payslip View"/>
                <set field="headerItem" value="payslipView"/>
                <set field="displayPassword" value="Y"/>
                <set field="target" value="payslipView"/>
                <set field="previousParams" from-field="sessionAttributes._PREVIOUS_PARAMS_"/>
                
                <entity-one entity-name="PayslipView" value-field="payslipViewContext"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="PARTYMGR" action="_CREATE"/>
                            </condition>
                            <widgets>
                                <screenlet title="Payslip Generator">
                    				<include-form name="PayslipGen" location="component://payroll/widget/payroll/PayrollReportForms.xml"/>
                                </screenlet>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.PartyMgrCreatePermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="PayslipGeneratorpdf">
        <section>
            <actions>
                <set field="titleProperty" value="Payslip View"/>                
                <set field="payrollPeriodId" from-field="parameters.payrollPeriodId"/>
                <set field="partyId" from-field="parameters.partyId"/>
                <entity-condition entity-name="PayslipView" list="payslipViewList">
                    <condition-list combine="and">
                        <condition-expr field-name="partyId" operator="equals" from-field="parameters.partyId" ignore-if-empty="true"/>
                        <condition-expr field-name="payrollPeriodId" operator="equals" from-field="parameters.payrollPeriodId" ignore-if-empty="true"/>
                    </condition-list>
                    <!-- note that we need to explicitly identify the fields to select, otherwise the query will include fields that can't logically be grouped -->
                </entity-condition>
            </actions>
            <widgets>
                <platform-specific>
                    <xsl-fo><html-template location="component://payroll/webapp/payroll/reports/payslip.fo.ftl"/></xsl-fo>
                </platform-specific>
            </widgets>
        </section>
    </screen>
</screens>