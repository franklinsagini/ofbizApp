                            </widgets>
                            <fail-widgets>
                                <label style="h3">Cant Create Member Loans Voucher</label>
                            </fail-widgets>
                        </section>

                        <section name="search-results">
                        	<widgets>
                        		<screenlet title="Member Loans Journal Voucher">
