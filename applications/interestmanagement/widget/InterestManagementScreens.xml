								<screenlet>
									<link target="scheduleInterestCalculations"  text="Schedule Interest Calculations" style="buttontext create">
                                                <image url-mode="raw" src="${iconsLocation}/add.png"/>
                                                
                                            </link>
								</screenlet>
								
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
