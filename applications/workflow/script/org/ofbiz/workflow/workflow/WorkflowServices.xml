<!-- OrganizationUnit -->
<simple-method method-name="createOrganizationUnit" short-description="Create OrganizationUnit">
        <make-value entity-name="OrganizationUnit" value-field="newEntity"/>
         <set-pk-fields map="parameters" value-field="newEntity"/>
        <set-nonpk-fields map="parameters" value-field="newEntity"/>
        <sequenced-id sequence-name="OrganizationUnit" field="organizationUnitId"/>
        <now-timestamp field="newEntity.createdDate"/>
        <set from-field="organizationUnitId" field="newEntity.organizationUnitId"/>
        <!--  set field="entity.loanStatus" value="DRAFT"/ -->
        <!-- set field="productType" value="Loan"/ -->
        <create-value value-field="newEntity"/>
</simple-method>
<simple-method method-name="updateOrganizationUnit" short-description="Update OrganizationUnit">
        <entity-one entity-name="OrganizationUnit" value-field="lookedUpValue"/>
        <set-nonpk-fields value-field="lookedUpValue" map="parameters"/>
        <store-value value-field="lookedUpValue"/>
</simple-method>
    
<simple-method method-name="deleteOrganizationUnit" short-description="Delete OrganizationUnit">
        <entity-one entity-name="OrganizationUnit" value-field="lookedUpValue"/>
        <remove-value value-field="lookedUpValue"/>
</simple-method>

