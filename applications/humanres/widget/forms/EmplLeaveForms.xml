			<entity-condition entity-name="EmplLeave">
				<condition-expr field-name="partyId" operator="equals"
					from-field="userLogin.partyId" />
			</entity-condition>
			<service service-name="performFind" result-map="result"
				result-map-list="listIt">
				<field-map field-name="inputFields" from-field="leaveCtx" />
				<field-map field-name="entityName" value="EmplLeave" />
				<field-map field-name="orderBy" from-field="parameters.leaveId" />
				<field-map field-name="viewIndex" from-field="viewIndex" />
				<field-map field-name="viewSize" from-field="viewSize" />
			</service>

		</actions> -->
	<form name="ListLeaveApprovals" list-name="listIt" type="list"
		odd-row-style="alternate-row" header-row-style="header-row-2"
		default-table-style="basic-table hover-bar" paginate-target="EmplLeave">
		<actions>
			<!-- <set field="entityName" value="EmplLeaveView" /> -->
			<entity-condition entity-name="EmplLeave">
					<condition-expr field-name="responsibleEmployee"
						operator="equals" from-field="${userLogin.partyId}" />
			</entity-condition>
				
			<!-- 	<entity-condition entity-name="EmplLeaveView">
				 <condition-expr field-name="organizationUnitId"
						operator="equals" from-field="organizationUnitId" />
				</entity-condition> -->
			<service service-name="performFind" result-map="result"
				result-map-list="listIt">
				<field-map field-name="inputFields" from-field="leaveApprovalCtx" />
				<field-map field-name="entityName" value="EmplLeave" />
				<!-- <field-map field-name="orderBy" from-field="parameters.leaveId" /> -->
				<field-map field-name="viewIndex" from-field="viewIndex" />
				<field-map field-name="viewSize" from-field="viewSize" />
			</service>
		</actions>
		<field name="partyId" field-name="partyId">
			<display-entity entity-name="PartyNameView"
				description="${firstName} ${lastName}">
			</display-entity>
		</field>
		<field name="leaveTypeId">
			<display-entity entity-name="EmplLeaveType" />
		</field>
		<field name="emplLeaveReasonTypeId">
			<display-entity entity-name="EmplLeaveReasonType" />
		</field>
		<field name="approvalStatus" title="Approval Status">
			<display />
		</field>
		<field name="ApproveLeave" title="${uiLabelMap.viewdetails}"
			widget-style="buttontext">
			<hyperlink target="EditEmplLeaveStatus" description="${uiLabelMap.viewdetails}">
				<parameter param-name="partyId" />
				<parameter param-name="fromDate" />
				<parameter param-name="leaveTypeId" />
			</hyperlink>
		</field>
	</form>
	<form name="EditEmplLeaveStatus" type="single" target="approveEmplLeaveStatus"
		default-map-name="leaveApp">
		<field name="leaveApproved" title="${uiLabelMap.HumanResLeaveStatus}">
			<drop-down allow-empty="false">
				<option key="Approved" description="${uiLabelMap.ApproveLeave}" />
				<option key="Rejected" description="${uiLabelMap.RejectLeave}" />
			</drop-down>
		</field>
		<field name="leaveId">
			<hidden />
		</field>
		<field name="partyId" position="1">
			<display />
		</field>
		<field name="ForwardedBy" position="2">
			<display />
		</field>
		<field name="leaveTypeId" position="1">
			<display />
		</field>
		<field name="emplLeaveReasonTypeId" position="2">
			<display />
		</field>
		<field name="fromDate" position="1">
			<display />
		</field>
		<field name="thruDate" position="2">
			<display />
		</field>
		<field name="description" position="1">
			<display />
		</field>
		<field name="leaveDuration" position="2">
			<display />
		</field>
		<field name="leaveBalance" position="1">
			<display />
		</field>
		<field name="leaveStage" position="2">
			<display />
		</field>
	</form>

	<form name="approveEmplLeaveStatus" type="single" target="forwardApplication"
		default-map-name="leaveApp">
		<actions>
			<set field="entityName" value="EmplLeave" />
			<service service-name="performFind" result-map="result"
				result-map-list="listIt">
				<field-map field-name="inputFields" from-field="parameters" />
				<field-map field-name="entityName" from-field="entityName" />
			</service>
		</actions>
		<field name="leaveId">
			<hidden />
		</field>
		<field name="partyId" position="1" title="Member">
			<display-entity entity-name="Member" key-field-name="partyId"
				description="${partyId} ${firstName} ${lastName}">
			</display-entity>
		</field>
		<field name="leaveTypeId" position="1" title="Leave Type">
			<display />
		</field>
		<field name="emplLeaveReasonTypeId" position="2">
			<display />
		</field>
		<field name="fromDate" position="1">
			<display />
		</field>
		<field name="thruDate" position="2">
			<display />
		</field>
		<field name="description" position="1">
			<display />
		</field>

		<field name="leaveBalance" position="2">
			<display />

		</field>
		<field name="leaveDuration" position="1">
			<display />
		</field>
		<field name="leaveStage" position="2">
			<display />
		</field>

	</form>

</forms>
