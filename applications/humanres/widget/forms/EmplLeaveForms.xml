<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">
	<form name="FindEmplLeaves" type="single" target="FindEmplLeaves"
		odd-row-style="header-row" default-table-style="basic-table">
		<field name="partyId">
			<hidden value="${userLogin.partyId}" />
		</field>
		<field name="leaveTypeId">
			<drop-down allow-empty="true">
				<entity-options description="${description}"
					key-field-name="leaveTypeId" entity-name="EmplLeaveType" />
			</drop-down>
		</field>
		<field name="emplLeaveReasonTypeId">
			<drop-down allow-empty="true">
				<entity-options description="${description}"
					key-field-name="emplLeaveReasonTypeId" entity-name="EmplLeaveReasonType" />
			</drop-down>
		</field>
		<field name="leaveStatus">
			<drop-down allow-empty="true">
				<entity-options description="${description}"
					key-field-name="statusId" entity-name="StatusItem">
					<entity-constraint name="statusTypeId" operator="equals"
						value="LEAVE_STATUS" />
					<entity-order-by field-name="description" />
				</entity-options>
			</drop-down>
		</field>
		<field name="description">
			<hidden />
		</field>
		<field name="noConditionFind">
			<hidden value="Y" /><!-- if this isn't there then with all fields 
				empty no query will be done -->
		</field>
		<field name="searchButton" title="${uiLabelMap.CommonFind}"
			widget-style="smallSubmit">
			<submit button-type="button" />
		</field>
	</form>
	<form name="ListEmplLeaves" list-name="listIt" type="list"
		odd-row-style="alternate-row" header-row-style="header-row-2"
		paginate-target="FindEmplLeaves" default-table-style="basic-table hover-bar">
		<actions>
			<set field="entityName" value="EmplLeave" />
			<!-- <set field="partyId" default-value="${userLogin.partyId?if_exists}"/> -->
			<service service-name="performFind" result-map="result"
				result-map-list="listIt">
				<field-map field-name="inputFields" from-field="parameters" />
				<field-map field-name="entityName" from-field="entityName" />
				<field-map field-name="viewIndex" from-field="viewIndex" />
				<field-map field-name="viewSize" from-field="viewSize" />
			</service>

		</actions>
		<field name="partyId">
			<display-entity entity-name="PartyNameView"
				description="${firstName} ${lastName}">
				<sub-hyperlink target="/partymgr/control/viewprofile"
					target-type="inter-app" description="${partyId}" link-style="buttontext">
					<parameter param-name="partyId" from-field="partyId" />
				</sub-hyperlink>
			</display-entity>
		</field>
		<field name="leaveTypeId">
			<display-entity entity-name="EmplLeaveType" />
		</field>
		<field name="emplLeaveReasonTypeId">
			<display-entity entity-name="EmplLeaveReasonType" />
		</field>
		<field name="fromDate">
			<display />
		</field>
		<field name="thruDate">
			<display />
		</field>
		<field name="leaveDuration">
			<display />
		</field>
		<field name="leaveBalance">
			<display />
		</field>
		<field name="leaveStatus">
			<display />
		</field>
		<field name="updateLeave" title="${uiLabelMap.CommonUpdate}"
			widget-style="buttontext" use-when="${leaveStatus=='CREATED'}">
			<hyperlink also-hidden="false" description="${uiLabelMap.CommonUpdate}"
				target="EditEmplLeave">
				<parameter param-name="partyId" />
				<parameter param-name="leaveTypeId" />
				<parameter param-name="fromDate" />
			</hyperlink>
		</field>
		<field name="forwardLeave" title="${uiLabelMap.forward}"
			widget-style="buttontext" use-when="${leaveStatus=='CREATED'}">
			<hyperlink also-hidden="false" description="${uiLabelMap.forward}"
				target="forwardEmplLeave">
				<parameter param-name="partyId" />
				<parameter param-name="leaveTypeId" />
				<parameter param-name="fromDate" />
			</hyperlink>
		</field>
		<field name="deleteLink" title="${uiLabelMap.CommonDelete}"
			widget-style="buttontext" use-when="${leaveStatus=='CREATED'}">
			<hyperlink also-hidden="false" description="${uiLabelMap.CommonDelete}"
				target="deleteEmplLeave">
				<parameter param-name="partyId" />
				<parameter param-name="leaveTypeId" />
				<parameter param-name="fromDate" />
			</hyperlink>
		</field>
		<field name="description">
			<hidden />
		</field>
	</form>
	<form name="EditEmplLeave" type="single" target="updateEmplLeaveExt"
		default-map-name="leaveApp" header-row-style="header-row"
		default-table-style="basic-table">
		<actions>
			
		</actions>
		
		<alt-target use-when="leaveApp==null" target="createEmplLeaveExt" />
		<field name="partyId" title="Member">
			<text value="${userLogin.partyId}" />
		</field>
		 <field name="appointmentdate" title="Appointment Date">
			<text value="${appointmentdate}"/>
		</field> 
		<field name="leaveTypeId" tooltip="${uiLabelMap.CommonRequired}">
			<drop-down allow-empty="true">
				<entity-options description="${description}"
					key-field-name="leaveTypeId" entity-name="EmplLeaveType" />
			</drop-down>
		</field>
		<field name="emplLeaveReasonTypeId">
			<drop-down allow-empty="true">
				<entity-options description="${description}"
					key-field-name="emplLeaveReasonTypeId" entity-name="EmplLeaveReasonType" />
			</drop-down>
		</field>
		<field name="fromDate" tooltip="${uiLabelMap.CommonRequired}">
			<date-time type="date" />
		</field>
		<field name="leaveDuration" tooltip="${uiLabelMap.CommonRequired}">
			<text />
		</field>
		<field name="thruDate" tooltip="${uiLabelMap.CommonRequired}">
			<date-time type="date" />
		</field>
		<field name="unitId" tooltip="${uiLabelMap.CommonRequired}">
			<hidden value="${unitId}"/>
		</field>
		<field name="accruedDay" >
			<text default-value="${accruedDay}" disabled="true"></text>
		</field>
		<field name="balanceDay" >
			<text default-value="${balanceDay}" disabled="true"></text>
		</field>
		<field name="leaveBalance" >
			<text default-value="${leaveBalance}" disabled="true"></text>
		</field>
		<field name="leaveStage">
			<hidden value="01" />
		</field>
		<field name="leaveStatus">
			<hidden value="CREATED" />
		</field>
		<field name="submitButton" use-when="leaveApp==null" title="${uiLabelMap.CommonCreate}"
			widget-style="smallSubmit">
			<submit button-type="button" />
		</field>
		<field name="submitButton" use-when="leaveApp!=null" title="${uiLabelMap.CommonUpdate}"
			widget-style="smallSubmit">
			<submit button-type="button" />
		</field>
	</form>
	<form name="FindLeaveApprovals" target="FindLeaveApprovals" type="single">
		<field name="noConditionFind">
			<hidden value="Y" /><!-- if this isn't there then with all fields 
				empty no query will be done -->
		</field>
		<field name="partyId">
			<lookup target-form-name="LookupPartyName" />
		</field>
		<field name="leaveStatus">
			<hidden value="Approved" />
		</field>
		<field name="leaveTypeId">
			<text-find />
		</field>
		<field name="emplLeaveReasonTypeId">
			<text-find />
		</field>
		<field name="description">
			<hidden />
		</field>
		<field name="searchButton" title="${uiLabelMap.CommonFind}"
			widget-style="smallSubmit">
			<submit button-type="button" />
		</field>
	</form>
	<form name="ListLeaveApprovals" list-name="departmentleaves" type="list"
		odd-row-style="alternate-row" header-row-style="header-row-2"
		default-table-style="basic-table hover-bar">
		<actions>
			<set field="entityName" value="EmplLeaveView" />
			<entity-condition entity-name="EmplLeaveView">
				<condition-list>
					<condition-expr field-name="leaveStatus" operator="not-equals"
						value="CREATED" />
					<condition-expr field-name="leaveStage" operator="equals"
						from-field="superVisorLevelValue" />
					 <condition-expr field-name="partyIdFrom" operator="equals"
						from-field="partyIdFromV" />
				</condition-list>
				<order-by field-name="partyId" />
			</entity-condition>
			<service service-name="performFind" result-map="result"
				result-map-list="listIt">
				<field-map field-name="inputFields" from-field="parameters" />
				<field-map field-name="entityName" from-field="entityName" />
			</service>
		</actions>
		<field name="partyId" field-name="partyId">
			<display-entity entity-name="PartyNameView"
				description="${firstName} ${lastName}">
			</display-entity>
		</field>
		<field name="leaveTypeId">
			<display-entity entity-name="EmplLeaveType" />
		</field>
		<field name="emplLeaveReasonTypeId">
			<display-entity entity-name="EmplLeaveReasonType" />
		</field>
		<field name="leaveStatus">
			<display />
		</field>
		<field name="ApproveLeave" title="${uiLabelMap.viewdetails}"
			widget-style="buttontext">
			<hyperlink target="EditEmplLeaveStatus" description="${uiLabelMap.viewdetails}">
				<parameter param-name="partyId" />
				<parameter param-name="fromDate" />
				<parameter param-name="leaveTypeId" />
			</hyperlink>
		</field>
	</form>
	<form name="EditEmplLeaveStatus" type="single" target="approveEmplLeaveStatus"
		default-map-name="leaveApp">
		<field name="leaveApproved" title="${uiLabelMap.HumanResLeaveStatus}">
			<drop-down allow-empty="false">
				<option key="Approved" description="${uiLabelMap.ApproveLeave}" />
				<option key="Rejected" description="${uiLabelMap.RejectLeave}" />
			</drop-down>
		</field>
		<field name="leaveId">
			<hidden />
		</field>
		<field name="partyId" position="1">
			<display />
		</field>
		<field name="ForwardedBy" position="2">
			<display />
		</field>
		<field name="leaveTypeId" position="1">
			<display />
		</field>
		<field name="emplLeaveReasonTypeId" position="2">
			<display />
		</field>
		<field name="fromDate" position="1">
			<display />
		</field>
		<field name="thruDate" position="2">
			<display />
		</field>
		<field name="description" position="1">
			<display />
		</field>
		<field name="leaveDuration" position="2">
			<display />
		</field>
		<field name="leaveBalance" position="1">
			<display />
		</field>
		<field name="leaveStage" position="2">
			<display />
		</field>
	</form>

	<form name="approveEmplLeaveStatus" type="single" target="approveEmplLeaveStatus"
		default-map-name="leaveApp">
		<actions>
			<set field="entityName" value="EmplLeave" />
			<service service-name="performFind" result-map="result"
				result-map-list="listIt">
				<field-map field-name="inputFields" from-field="parameters" />
				<field-map field-name="entityName" from-field="entityName" />
			</service>
		</actions>
		<field name="leaveId">
			<hidden />
		</field>
		<field name="partyId" position="1" title="Member">
			<display-entity entity-name="Member" key-field-name="partyId"
				description="${partyId} ${firstName} ${lastName}">
			</display-entity>
		</field>
		<field name="leaveTypeId" position="1" title="Leave Type">
			<display />
		</field>
		<field name="emplLeaveReasonTypeId" position="2">
			<display />
		</field>
		<field name="fromDate" position="1">
			<display />
		</field>
		<field name="thruDate" position="2">
			<display />
		</field>
		<field name="description" position="1">
			<display />
		</field>

		<field name="leaveBalance" position="2">
			<display />

		</field>
		<field name="leaveDuration" position="1">
			<display />
		</field>
		<field name="leaveStage" position="2">
			<display />
		</field>

	</form>

</forms>
