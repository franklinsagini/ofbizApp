<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="atmmanagementCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="FindMember">
        <section>
            <actions>
                <set field="titleProperty" value="Members"/>
                <set field="headerItem" value="main"/>
                <set field="tabButtonItem" value="findmember"/>
                <set field="memberCtx" from-field="parameters"/>

                <!-- service service-name="listSaccoMembers" auto-field-map="parameters"/ -->
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <!-- do check for PARTYMGR, _VIEW permission -->
                            <condition>
                                <if-service-permission service-name="partyBasePermissionCheck" main-action="VIEW"/>
                            </condition>
                            <widgets>
                            	<include-menu location="component://atmmanagement/widget/atmmanagementMenus.xml" name="CardTabBar"/>
                                <!-- platform-specific>
                                    <html><html-template location="component://party/webapp/partymgr/party/listsaccomembers.ftl"/></html>
                                </platform-specific -->
                                <screenlet title="Search Members">
                                        <include-form name="FindMember" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                            	</screenlet>
                                <screenlet title="Members List">
                                		<include-form  name="members" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                                </screenlet>
                            </widgets>
                            <fail-widgets>
                                <label style="h3" text="${uiLabelMap.PartyMgrViewPermissionError}"/>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <!-- Card Application -->
    <screen name="cardApplication">
        <section>
            <actions>
                <set field="titleProperty" value="Card Application"/>
                <set field="headerItem" value="cardApplication"/>
                <set field="tabButtonItem" value="cardApplication"/>
                <set field="displayPassword" value="Y"/>
                <set field="target" value="createCardApplication"/>
                <set field="previousParams" from-field="sessionAttributes._PREVIOUS_PARAMS_"/>
                <!-- property-to-field field="defaultCountryGeoId" resource="general" property="KEN" default="KEN"/ -->
                <!-- set field="loanSecurityId" from-field="parameters.loanSecurityId"/ -->
                <set field="partyId" from-field="parameters.partyId"/>
                <set field="cardApplicationCtx" from-field="parameters"/>
                <entity-one entity-name="CardApplication" value-field="cardApplicationContext"/>
            </actions>
            <widgets>
                <!-- decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}" -->
                <decorator-screen name="atmmanagementCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        
                         <screenlet title="Search Card Application">
                                        <include-form name="FindCardApplication" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                         </screenlet>
                        
                        <section name="search-results">
                        	<widgets>
                        		<screenlet title="Card Applications">
                        			<include-form name="listCardApplication" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                        		</screenlet>
                        	</widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <!-- cardApplicationReceived -->
       <screen name="cardApplicationReceived">
        <section>
            <actions>
                <set field="titleProperty" value="Receive Card Application"/>
                <set field="headerItem" value="cardApplicationReceived"/>
                <set field="tabButtonItem" value="cardApplicationReceived"/>
                <set field="displayPassword" value="Y"/>
                <set field="target" value="createCardApplication"/>
                <set field="previousParams" from-field="sessionAttributes._PREVIOUS_PARAMS_"/>
                <!-- property-to-field field="defaultCountryGeoId" resource="general" property="KEN" default="KEN"/ -->
                <!-- set field="loanSecurityId" from-field="parameters.loanSecurityId"/ -->
                <set field="partyId" from-field="parameters.partyId"/>
                <set field="cardApplicationCtx" from-field="parameters"/>
                <entity-one entity-name="CardApplication" value-field="cardApplicationContext"/>
            </actions>
            <widgets>
                <!-- decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}" -->
                <decorator-screen name="atmmanagementCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="ATMMANAGEMENT" action="_CREATE"/>
                            </condition>
                            <widgets>
                                <screenlet title="Card Application">
                                    <include-form name="NewCardApplication" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                                </screenlet>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">Card Management Permission</label>
                            </fail-widgets>
                        </section>
                        
                         <screenlet title="Search Card Application">
                                        <include-form name="FindCardApplication" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                         </screenlet>
                        
                        <section name="search-results">
                        	<widgets>
                        		<screenlet title="Card Applications">
                        			<include-form name="listCardApplicationReceived" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                        		</screenlet>
                        	</widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
	<!-- NewCardLog -->
	<screen name="NewCardLog">
        <section>
            <actions>
                <set field="titleProperty" value="Card Log"/>
                <set field="headerItem" value="cardLog"/>
                <set field="tabButtonItem" value="cardLog"/>
                <set field="displayPassword" value="Y"/>
                <set field="target" value="createCardLog"/>
                <set field="previousParams" from-field="sessionAttributes._PREVIOUS_PARAMS_"/>
                <!-- property-to-field field="defaultCountryGeoId" resource="general" property="KEN" default="KEN"/ -->
                <!-- set field="loanSecurityId" from-field="parameters.loanSecurityId"/ -->
                
                <entity-one entity-name="CardLog" value-field="cardLogContext"/>
                <entity-one entity-name="CardApplication" value-field="cardApplication">
                	<field-map field-name="cardApplicationId" from-field="parameters.cardApplicationId"/>
                </entity-one>
                <set field="partyId" value="${cardApplication.partyId}"/>
                <entity-one value-field="member" entity-name="Member">
                	<field-map field-name="partyId" from-field="partyId"/>
                </entity-one>
            </actions>
            <widgets>
                <!-- decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}" -->
                <decorator-screen name="atmmanagementCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="ATMMANAGEMENT" action="_CREATE"/>
                            </condition>
                            <widgets>
                                <!-- screenlet title="Card Application">
                                    <include-form name="NewCardLog" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                                </screenlet -->
                               <container>
                               	<container>
                               			
                               			
										<label style="h3">${member.firstName} ${member.middleName} ${member.lastName} Card Application Logs
										</label>
									</container>
									<container>
										<label style="h3">Form No : ${cardApplication.cardApplicationId}
										</label>
									</container>
                               </container>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">Card Management Permission</label>
                            </fail-widgets>
                        </section>
                        
                        <section name="search-results">
                        	<widgets>
                        		<screenlet title="Card Logs">
                        			<include-form name="listCardLog" location="component://atmmanagement/widget/atmmanagementForms.xml"/>
                        		</screenlet>
                        	</widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
	
